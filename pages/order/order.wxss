/* pages/order/order.wxss */
.order .weui-cells{
    font-size:14px;
}
.order .align-center{
    box-sizing: border-box;
    padding:8px 15px;
    margin:0;
    color:#000;
    text-align: center;
    font-size:18px;
    background-color:#e1e1e1;
}
.order .text-space{
    display:inline-block;
    opacity: 0;
    visibility: none;
}
.order .full-width{
    width:100%;
}
.order .weui-cells::before{
    border:none;
}
.order .weui-cells:last-child::before{
    content:" ";
    position:absolute;
    left:0;
    top:0;
    right:0;
    height:1px;
    border-bottom:1rpx solid #d9d9d9;
    color:#d9d9d9;
    left:15px;
    
}
.weui-cell > .weui-cell__ft{
    display:none;
}
.weui-cell_warn > .weui-cell__ft{
    display:block;
}
.order .with-padtop{
    box-sizing:border-box;    
    padding-top:15px;
}
.order .weui-btn{
    border-radius:8px;
    line-height: 2;
    font-size:14px;
}
.order .weui-select{
    padding-left:0;
    padding-top:10px;
}
.order .padding15{
    padding:10px 15px;
}
.order .weui-panel::after, 
.order .weui-panel::before{
    border:none;
}